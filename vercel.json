{
  "public": false,

  "cleanUrls": true,
  "trailingSlash": false,

  "builds": [
    { "src": "api/**", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],

  "rewrites": [
    { "source": "/api/(.*)", "destination": "api/app.js" },
    { "source": "/(.*)", "destination": "public/$1" }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
